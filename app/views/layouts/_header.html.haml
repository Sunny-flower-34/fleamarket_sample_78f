.header
  .logo
    =link_to root_path do
      = image_tag "logo.png", size: "185x49", alt: "フリマのアイコン"
  .search
    = form_with(local: true, method: :get, class: "search-form") do |f|
      = f.text_field :keyword, placeholder: "何かお探しですか？", class: "search-input"
      %button{type: "submit", class:'btn'}
        %i.fas.fa-search
.menu
  .category カテゴリ
  =link_to "カテゴリーから探す", categories_path, class:"search__category"
  -# = render partial: "home/nav-category", parent: @parents
  %ul.level1
  - @parents.each do |parent|
    %li.parent__list
      %a.list--name{href: ""}
        = parent.name         
        %ul.level2
          - parent.children.each do |child|
            %li.child__list
              %a.list--name{href: ""}
                = child.name
                %ul.level2
                  - child.children.each do |grandchild|
                    %li.grandchild__list
                      %a.list--name{href: ""}
                        = grandchild.name
- if user_signed_in?
