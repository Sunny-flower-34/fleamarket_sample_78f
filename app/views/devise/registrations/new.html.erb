<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="first_name">
    <%= f.label :first_name %><br />
    <%= f.text_area :first_name_confirmation, autocomplete: "first_name" %>
  </div>
  
  <div class="family_name">
    <%= f.label :family_name %><br />
    <%= f.text_area :first_name_confirmation, autocomplete: "first_name" %>
  </div>
 
  <div class="first_kana">
    <%= f.label :first_kana %><br />
    <%= f.text_area :first_kana_confirmation, autocomplete: "first_kana" %>
  </div>
  
  <div class="family_kana">
    <%= f.label :family_kana %><br />
    <%= f.text_area :family_kana_confirmation, autocomplete: "family_kana" %>
  </div>

  <div class="nickname">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname_confirmation, autocomplete: "nickname" %>
  </div>

  <div class="birthday">
    <%= f.label :birthday %><br />
    <%= f.text_area :birthday, autocomplete: "birthday" %>
  </div>
 

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
