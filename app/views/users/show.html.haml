              = link_to "住所登録", new_address_path, method: :get
            .my-page__main__side-box__contents__section__list__profile-edit
              = link_to "住所編集", edit_address_path, method: :get
            .my-page__main__side-box__contents__section__list__cledit-register
              = link_to "クレジットカード登録", new_card_path, method: :get
            .my-page__main__side-box__contents__section__list__cledit-edit
              = link_to "クレジットカード情報編集", mypage_card_index_path, method: :get
